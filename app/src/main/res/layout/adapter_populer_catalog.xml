<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/li_catalog_Items"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_103sdp"
        android:background="@color/colorPrimary">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_103sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_99sdp"
                app:layout_constraintDimensionRatio="2:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivCatalog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_light_grey"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--
                <ImageView
                    android:id="@+id/ivCatalog"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/color_light_black"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    android:src="@drawable/image_7" />-->
    </FrameLayout>

    <TextView
        android:id="@+id/tvCatalog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/poppins_regular"
        android:text="Full length top"
        android:textColor="@color/color_black"
        android:textSize="@dimen/_10sdp" />


</LinearLayout>