<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_280sdp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_share_dialog"
    android:padding="@dimen/_7sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingStart="@dimen/_5sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cad_tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/poppins_semibold"
                android:padding="@dimen/_5sdp"
                android:text="FFI CREDIT"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/tvcreedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_11sdp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/edtamnt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/bg_edittext_otp"
            android:drawableStart="@drawable/rs"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/poppins_semibold"
            android:inputType="number"
            android:maxLength="5"
            android:maxLines="1"
            android:minWidth="@dimen/_100sdp"
            android:paddingStart="@dimen/_5sdp"
            android:singleLine="true"
            android:text="5000"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_13sdp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/lbl_or"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_11sdp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rd1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_amount"
                android:button="@null"
                android:checked="true"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/amt1"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp" />

            <RadioButton
                android:id="@+id/rd2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/custom_amount"
                android:button="@null"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/amt2"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp" />

            <RadioButton
                android:id="@+id/rd3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/custom_amount"
                android:button="@null"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/amt3"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp" />
        </RadioGroup>

        <!--   <View
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/colorWhite" />-->


        <Button
            android:id="@+id/cad_btnOk"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/bg_edtblue_otp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Add"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>

</RelativeLayout>