<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/li_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_7sdp"
    android:layout_marginEnd="@dimen/_7sdp"
    android:layout_marginBottom="@dimen/_20sdp"
    android:background="@drawable/bg_white_curve"
    android:elevation="@dimen/_2sdp"
    android:orientation="horizontal"
    android:padding="@dimen/_7sdp">

    <LinearLayout
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/_5sdp">

            <ImageView
                android:id="@+id/ivProductImg"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppins_regular"
            android:minLines="2"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_9sdp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_minus2sdp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_9sdp" />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_minus2sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="Sold By:"
                android:textSize="@dimen/_7sdp" />

            <TextView
                android:id="@+id/tvSeller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Caspian Bellevedere"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_7sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Size:"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_7sdp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_1sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="L"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_7sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Qty:"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_7sdp" />

            <TextView
                android:id="@+id/tvQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_1sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="L"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_7sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_tracking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/tracking_code"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_7sdp" />

                    <TextView
                        android:id="@+id/tvTreckingcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:maxLines="1"
                        android:minWidth="@dimen/_60sdp"
                        android:singleLine="true"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_7sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/tracking_url"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_7sdp" />

                    <TextView
                        android:id="@+id/tvTreckingurl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:autoLink="web"
                        android:fontFamily="@font/poppins_regular"
                        android:maxLines="1"
                        android:minWidth="@dimen/_60sdp"
                        android:singleLine="true"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_7sdp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/ivshare"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:src="@mipmap/ic_share" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/lbl_write_review"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_9sdp" />

            <ImageView
                android:layout_width="@dimen/_6sdp"
                android:layout_height="@dimen/_6sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_account"
                android:tint="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:paddingBottom="5dp"
            android:paddingTop="@dimen/_5sdp"
            android:id="@+id/li_return_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/lbl_return_product"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_9sdp" />

            <ImageView
                android:layout_width="@dimen/_6sdp"
                android:layout_height="@dimen/_6sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_account"
                android:tint="@color/colorPrimary" />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tvReturnedProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/color_red"
            android:textSize="@dimen/_9sdp" />



    </LinearLayout>


</LinearLayout>


