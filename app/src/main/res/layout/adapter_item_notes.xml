<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_toStartOf="@+id/ivNote"
        android:id="@+id/tvAddedBy"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/color_black"
        android:fontFamily="@font/poppins_bold"/>

    <com.ffi.linkClickableTextView.TextViewClickable
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_toStartOf="@+id/ivNote"
        android:layout_below="@+id/tvAddedBy"
        android:id="@+id/tvNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/color_grey"
        android:fontFamily="@font/poppins_regular"/>

    <TextView
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_toStartOf="@+id/ivNote"
        android:layout_below="@+id/tvNote"
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/color_grey_light"
        android:fontFamily="@font/poppins_regular"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivNote"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_membership_bg_new" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grey"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@+id/tvDate"/>
</RelativeLayout>