<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/inner_color">
        <shape android:shape="rectangle">

            <solid android:color="@color/color_green" />
            <stroke
                android:width="@dimen/_3sdp"
                android:color="@color/color_black" />
            <corners android:radius="@dimen/_3sdp" />
            <size
                android:width="@dimen/_15sdp"
                android:height="@dimen/_15sdp" />
        </shape>
    </item>

    <item android:id="@+id/border_color">
        <shape android:shape="rectangle">

            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/color_green" />
            <corners android:radius="@dimen/_3sdp" />
            <size
                android:width="@dimen/_20sdp"
                android:height="@dimen/_20sdp" />
        </shape>
    </item>
</layer-list>